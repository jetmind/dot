# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

ZSH_THEME="jetprose"

DISABLE_AUTO_UPDATE="false"
COMPLETION_WAITING_DOTS="true"

plugins=(git virtualenvwrapper python vagrant django git-flow)

source $ZSH/oh-my-zsh.sh

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games
export PATH=$PATH:/home/jetmind/.local/bin
export PATH=$PATH:/home/jetmind/bin

export EDITOR=nvim

export GOPATH=$HOME/p/go
export PATH=/usr/local/go/bin:$PATH
export PATH=$GOPATH/bin:$PATH

# aliases
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias o="xdg-open"

alias git="nocorrect git"
alias sudo="nocorrect sudo"
alias workon="nocorrect workon"
alias g="git"
alias w="workon"
alias g="ack-grep"
alias n="nosetests --with-progressive"
alias dc="docker-compose"
alias e="emacsclient"

# options
export SPROMPT="Correct $fg[red]%R$reset_color to $fg[green]%r?$reset_color (Yes, No, Abort, Edit) "
setopt auto_cd
setopt extended_glob
autoload -U zmv

# autojump
[[ -s ~/.autojump/etc/profile.d/autojump.zsh ]] && source ~/.autojump/etc/profile.d/autojump.zsh
export AUTOJUMP_KEEP_SYMLINKS=1
# needed for zsh autojump completion
autoload -U compinit; compinit

# pythonbrew
# [[ -s $HOME/.pythonbrew/etc/bashrc ]] && source $HOME/.pythonbrew/etc/bashrc

